<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/navigation_favorite">


    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.azamovhudstc.soplay.ui.screens.favorite.FavoriteScreen"
        android:label="@string/title_favorite"
        tools:layout="@layout/favorite_screen">
        <action
            android:id="@+id/action_navigation_favorite_to_navigation_anime"
            app:destination="@id/detailScreen">
            <argument
                android:name="animeLink"
                android:defaultValue="null"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_latest"
        android:name="com.azamovhudstc.soplay.ui.screens.home.HomeScreen"
        android:label="@string/title_latest"
        tools:layout="@layout/home_screen">
        <action
            android:id="@+id/action_navigation_latest_to_navigation_anime"
            app:destination="@id/detailScreen">
            <argument
                android:name="animeLink"
                android:defaultValue="null"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_trending"
        android:name="com.azamovhudstc.soplay.ui.screens.trending.TrendingScreen"
        android:label="@string/title_trending"
        tools:layout="@layout/trending_screen">
        <action
            android:id="@+id/action_navigation_trending_to_navigation_anime"
            app:destination="@id/detailScreen">
            <argument
                android:name="animeLink"
                android:defaultValue="null"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.azamovhudstc.soplay.ui.screens.search.SearchScreen"
        android:label="@string/title_search"
        tools:layout="@layout/search_screen">
        <action
            android:id="@+id/action_navigation_search_to_navigation_anime"
            app:destination="@id/detailScreen">
            <argument
                android:name="animeLink"
                android:defaultValue="null"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.azamovhudstc.soplay.ui.screens.settings.SettingsFragment"
        android:label="Settings">
    </fragment>

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.azamovhudstc.soplay.ui.screens.home.HomeScreen"
        android:label="SoPlay"
        tools:layout="@layout/home_screen">
        <action
            android:id="@+id/action_homeScreen_to_detailScreen"
            app:destination="@id/detailScreen" />
    </fragment>
    <fragment
        android:id="@+id/detailScreen"
        android:name="com.azamovhudstc.soplay.ui.screens.detail.DetailScreen"
        android:label="DetailScreen" />

    <fragment
        android:id="@+id/searchScreen"
        android:name="com.azamovhudstc.soplay.ui.screens.search.SearchScreen"
        android:label="Search"
        tools:layout="@layout/search_screen" />
</navigation>